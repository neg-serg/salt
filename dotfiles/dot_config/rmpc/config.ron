#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    address: "localhost:6600",
    theme: Some("neg"),
    cache_dir: None,
    on_song_change: None,
    volume_step: 1,
    status_update_interval_ms: 1000,
    select_current_song_on_change: false,
    enable_mouse: true,
    max_fps: 240,
    reflect_changes_to_playlist: true,
    album_art: (
        method: Auto,
        max_size_px: (width: 600, height: 600),
        disabled_protocols: ["http://", "https://"],
        vertical_align: Center,
        horizontal_align: Center,
    ),
    directories_sort: ModifiedTime(reverse: true),
    tabs: [
        (
            name: "Queue",
            pane: Split(
                direction: Horizontal,
                panes: [(size: "80%", pane: Pane(Queue)), (size: "20%", pane: Pane(AlbumArt))],
            ),
        ),
        ( name: "Directories", pane: Pane(Directories),),
        ( name: "Artists", pane: Pane(Artists),),
        ( name: "Album Artists", pane: Pane(AlbumArtists),),
        ( name: "Albums", pane: Pane(Albums),),
        ( name: "Playlists", pane: Pane(Playlists),),
        ( name: "Search", pane: Pane(Search),),
    ],
    keybinds: (
        global: {
            "0": DirectoriesTab,
            "1": QueueTab,
            "2": ArtistsTab,
            ":": CommandMode,
            "<": PreviousTrack,
            "<S-Tab>": PreviousTab,
            "<Tab>": NextTab,
            ">": NextTrack,
            "?": SearchTab,
            "7": ExternalCommand(command: ["kitty", "--class", "mpd-add", "~/.local/bin/mpd-add", "-n"]),
            "L": ExternalCommand(command: ["mpc", "clear"]),
            "O": ShowOutputs,
            "P": PlaylistsTab,
            "U": Rescan,
            "b": SeekBack,
            "f": SeekForward,
            "o": ShowOutputs,
            "p": TogglePause,
            "q": Quit,
            "s": Stop,
            "u": Update,
            "w": ShowHelp,
            "z": ToggleRepeat,

            "R": ToggleConsume,
            "r": ToggleRandom,
            "y": ToggleSingle,
            "-":  VolumeDown,
            "=": VolumeUp,
        },
        navigation: {
            "A": AddAll,
            "a": Select,
            "<C-c>": Close,
            "<C-d>": DownHalf,
            "<CR>": Confirm,
            "<C-u>": UpHalf,
            "D": Delete,
            "/": EnterSearch,
            "<Esc>": Close,
            "G": Bottom,
            "g": Top,
            "h": Left,
            "i": FocusInput,
            "j": Down,
            "J": MoveDown,
            "K": MoveUp,
            "k": Up,
            "l": Right,
            "n": NextResult,
            "N": PreviousResult,
            "r": Rename,
            "<Space>": Add,
        },
        queue: {
            "a": AddToPlaylist,
            "C": DeleteAll,
            "<CR>": Play,
            "<C-s>": Save,
            "d": Delete,
            "<Space>": JumpToCurrent,
        },
    ),
)
