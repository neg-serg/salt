# Maintainer: neg-serg <neg-serg@example.com>
pkgname=richcolors
pkgver=0.1.0
pkgrel=1
pkgdesc='CLI that renders color palette images from hex code files'
arch=('any')
url='https://github.com/Rizen54/richcolors'
license=('Unlicense')
depends=('python' 'python-pillow')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/refs/heads/main.tar.gz")
sha256sums=('SKIP')

package() {
    cd "${pkgname}-main"
    install -Dm755 richcolors "${pkgdir}/usr/bin/richcolors"
}
