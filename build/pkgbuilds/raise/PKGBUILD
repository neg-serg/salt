# Maintainer: neg-serg <neg-serg@example.com>
pkgname=raise
pkgver=0.1.0
pkgrel=1
pkgdesc='Run or raise for Hyprland (neg-serg fork)'
arch=('x86_64')
url='https://github.com/neg-serg/raise'
license=('MIT')
depends=()
makedepends=('rust' 'cargo' 'git')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/v${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
    cd "${pkgname}-${pkgver}"
    cargo build --release --locked
}

package() {
    cd "${pkgname}-${pkgver}"
    install -Dm755 "target/release/raise" "${pkgdir}/usr/bin/raise"
}
